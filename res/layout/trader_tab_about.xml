<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/list_default_padding" >

    <FrameLayout
        android:id="@+id/ivwTraderPhoto"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/border_pictures"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_launcher" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right"
            android:src="@drawable/ic_camera" />
    </FrameLayout>

    <TextView
        android:id="@+id/tvwTraderName"
        style="@style/TextAppearance.XTrade.HeaderTraderDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/default_padding"
        android:layout_toRightOf="@+id/ivwTraderPhoto"
        android:text="Large Text" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignLeft="@+id/ivwTraderPhoto"
        android:layout_below="@+id/ivwTraderPhoto"
        android:layout_marginTop="@dimen/default_margin"
        android:background="@color/black" />

    <ImageView
        android:id="@+id/tvwTraderWebsite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:paddingRight="10dp"
        android:layout_alignTop="@+id/tvwTraderName"
        android:src="@drawable/website" />

    <TextView
        android:id="@+id/tvwTraderAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvwTraderName"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tvwTraderWebsite"
        android:layout_marginTop="25dp"
        android:text="Medium Text" />

    <ListView
        android:id="@+id/lvwContact"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/line"
        android:cacheColorHint="@android:color/transparent" >

</ListView>
    
</RelativeLayout>