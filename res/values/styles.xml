<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="DashboardButton">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:textSize">@dimen/textMediumSize</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@null</item>
    </style>

    <style name="ListHeader">
        <item name="android:textColor">@color/list_header</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/list_header_size</item>
    </style>
    
    <style name="TradeButton">
        <item name="android:background">@drawable/button_bg</item>
        
    </style>

    <style name="LinkItem">
        <item name="android:textColor">@color/text_solid_color</item>
        <item name="android:textSize">@dimen/textMediumSize</item>
        <item name="android:textStyle">bold</item>
            
    </style>
    
    <style name="ItemList">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/list_item_size</item>
    </style>

    <style name="TextAppearance.XTrade" parent="@android:style/TextAppearance"></style>
    
    <style name="TextAppearance.XTrade.HeaderTraderDetail">
        <item name="android:textColor">@color/base_green_light</item>
        <item name="android:textSize">@dimen/textBigSize</item>
        <item name="android:textStyle">bold</item>    
    </style>
    
    <style name="TextAppearance.XTrade.HeaderTraderLabel">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/textBigSize</item>
        <item name="android:textStyle">bold</item>    
    </style>

    <style name="Widget.XTrade.EditText" parent="@android:style/Widget.EditText">
        <item name="android:ems">10</item>
        
    </style>

    <style name="Widget.XTrade.ActionBar" parent="Widget.Sherlock.Light.ActionBar.Solid.Inverse">
        <item name="background">@drawable/ab_background</item>
        <item name="android:background">@drawable/ab_background</item>
    </style>

    <style name="Widget.XTrade.ActionBar.TabText" parent="Widget.Sherlock.ActionBar.TabText">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/primary_text_color</item>
    </style>
    
    <style name="TextAppearance.XTrade.Widget.DropDownItem" parent="TextAppearance.Sherlock.Widget.DropDownItem">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Widget.XTrade.ActionBar.TabView" parent="Widget.Sherlock.ActionBar.TabView">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@drawable/tab_selector</item>
        <item name="android:paddingLeft">16dip</item>
        <item name="android:paddingRight">16dip</item>
    </style>
    
     <style name="Widget.XTrade.DropDownListView" parent="Widget.Sherlock.ListView.DropDown">
        
    </style>

</resources>